<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TextEmotion"
    android:background="@drawable/hcm"
    android:id="@+id/main_layout">


    <Button android:id="@+id/train"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Train"/>

    <ImageView android:id="@+id/result"
        android:layout_alignBaseline="@id/train"
        android:layout_alignParentRight="true"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <Button android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Test"
        android:layout_below="@id/train" />

    <EditText android:id="@+id/testText"
        android:layout_below="@id/test"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textColor="#FFFFFF" />

    <ScrollView android:id="@+id/evalResultScroller"
        android:layout_width="match_parent"
        android:layout_below="@id/testText"
        android:layout_height="400px">

        <TextView android:id="@+id/evalResult" android:text="..." android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            />
    </ScrollView>
</RelativeLayout>
